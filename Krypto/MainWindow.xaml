                        Margin="0,220,0,0"
                        HorizontalAlignment="Center"
                        ToolTip="">
                        <Button Margin="0,0,15,0" Click="Encode_A2">Encode</Button>
                        <Button Margin="15,0,0,0" Click="Decode_A2">Decode</Button>
                    </WrapPanel>
                </Grid>
            </TabItem>
            <!--#endregion-->

            <!--#region ZADANIE 3-->
