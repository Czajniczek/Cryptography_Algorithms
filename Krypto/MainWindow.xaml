<Window
    x:Class="Krypto.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Krypto"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Kryptografia"
    Width="800"
    Height="450"
    ResizeMode="NoResize"
    mc:Ignorable="d">

    <Grid>
        <TabControl HorizontalAlignment="Center">
            <!--#region ZADANIE 1-->
            <TabItem
                Width="130"
                Height="50"
                Cursor="Hand"
                Header="1"
                Style="{StaticResource MaterialDesignNavigationRailTabItem}"
                ToolTip="Rail Fence">
                <Grid>
                    <StackPanel Margin="150,15,150,0" ToolTip="">
                        <TextBox
                            Name="RailFence_Input"
                            Padding="8"
                            materialDesign:HintAssist.Hint="Input"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}" />
                        <TextBox
                            Name="RailFence_Key"
                            Margin="0,10,0,10"
                            Padding="8"
                            materialDesign:HintAssist.Hint="Key"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}" />
                        <TextBox
                            Name="RailFence_Output"
                            Padding="8"
                            materialDesign:HintAssist.Hint="Output"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}" />
                    </StackPanel>
                    <WrapPanel
                        Margin="0,220,0,0"
                        HorizontalAlignment="Center"
                        ToolTip="">
                        <Button Margin="0,0,15,0" Click="Encode_RailFance">Encode</Button>
                        <Button Margin="15,0,0,0" Click="Decode_RailFance">Decode</Button>
                    </WrapPanel>
                </Grid>
            </TabItem>
            <!--#endregion-->

            <!--#region ZADANIE 2-->
